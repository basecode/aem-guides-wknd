{
  "name": "aem-sites-starterkit-wknd",
  "version": "1.0.0",
  "description": "Generates an AEM Starter Kit",
  "license": "SEE LICENSE IN LICENSE.txt",
  "scripts": {
    "starterkit:create": "mkdir starterkit",
    "starterkit:clear": "rm -rf starterkit",

    "copy": "npm run copy:files && npm run copy:previews && npm run copy:properties",
    "copy:files": "cp -r files starterkit",
    "copy:previews": "cp -r previews starterkit",
    "copy:properties": "cp -r properties.json starterkit",
    "copy:template": "cp -r site.template/target/aem-sites-starterkit-wknd.site.template-0.0.1-SNAPSHOT.zip starterkit/site-template.zip",

    "zip": "npm run zip:theme && npm run zip:bundle",
    "zip:template": "bestzip starterkit/site-template.zip site.template/*",
    "zip:theme": "bestzip starterkit/theme-sources.zip site.theme/*",
    "zip:bundle": "bestzip starterkit.zip starterkit/*",

    "theme:build": "cd site.theme && npm install && npm run prod && cd ..",

    "build": "npm run starterkit:create && npm run copy && npm run zip && npm run starterkit:clear",

    "deploy": "npm run build && curl -u admin:admin -F 'file=@/path/to/starterkit1.zip' http://localhost:4502/conf/global/starterkits.import.html"
  },
  "devDependencies": {
    "bestzip": "^2.1.6"
  },
  "dependencies": {}
}
